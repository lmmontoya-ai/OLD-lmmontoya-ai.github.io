---
// src/components/layout/Header.astro
// Site header with navigation, distinctive brand styling and hover effects

import { Image } from "astro:assets";
import ThemeToggle from "../ui/ThemeToggle.astro";
---

<header
  id="site-header"
  class="fixed top-0 left-0 right-0 z-50 transition-all duration-500 h-14 shadow-lg bg-background/95 backdrop-blur-lg"
>
  <div
    class="absolute inset-x-0 -bottom-px h-px bg-gradient-to-r from-transparent via-accent/40 to-transparent"
  >
  </div>

  <div class="container mx-auto px-6 py-2 flex items-center justify-between">
    <!-- Brand/Motto -->
    <a
      href="/"
      class="font-sans font-semibold text-lg tracking-tight group relative"
    >
      <span
        class="block text-m md:text-m text-highlight font-bold mt-0.5 font-mono"
      >
        Understand to Align
      </span>
      <span
        class="absolute -bottom-1 left-0 w-full h-px bg-gradient-to-r from-accent to-highlight transform origin-left scale-x-0 transition-transform duration-300 group-hover:scale-x-100"
      ></span>
    </a>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex items-center gap-2 h-full">
      <a
        href="/roadmap"
        class="flex items-center h-10 px-3 text-themed-text hover:text-accent font-medium font-mono text-sm transition-all duration-300 relative group rounded-lg"
      >
        Roadmap
        <span
          class="absolute bottom-0 left-0 w-full h-px bg-gradient-to-r from-accent/40 to-accent/0 transform origin-left scale-x-0 transition-transform duration-300 group-hover:scale-x-100"
        ></span>
      </a>
      <span class="nav-link-divider"></span>
      <a
        href="/projects"
        class="flex items-center h-10 px-3 text-themed-text hover:text-accent font-medium font-mono text-sm transition-all duration-300 relative group rounded-lg"
      >
        Projects
        <span
          class="absolute bottom-0 left-0 w-full h-px bg-gradient-to-r from-accent/40 to-accent/0 transform origin-left scale-x-0 transition-transform duration-300 group-hover:scale-x-100"
        ></span>
      </a>
      <span class="nav-link-divider"></span>
      <a
        href="/literature"
        class="flex items-center h-10 px-3 text-themed-text hover:text-accent font-medium font-mono text-sm transition-all duration-300 relative group rounded-lg"
      >
        Literature
        <span
          class="absolute bottom-0 left-0 w-full h-px bg-gradient-to-r from-accent/40 to-accent/0 transform origin-left scale-x-0 transition-transform duration-300 group-hover:scale-x-100"
        ></span>
      </a>
      <span class="nav-link-divider"></span>
      <a
        href="/contact"
        class="flex items-center h-10 px-3 relative overflow-hidden group rounded-lg text-themed-text hover:text-themed-text font-medium font-mono text-sm transition-all duration-300"
        aria-label="Contact"
      >
        <span
          class="absolute inset-0 w-full h-full bg-gradient-to-r from-accent to-highlight opacity-80 group-hover:opacity-100 transition-opacity duration-300 rounded-lg"
        ></span>
        <span
          class="font-medium font-mono text-sm transition-all duration-300 relative z-10"
        >
          Contact
        </span>
      </a>
      <ThemeToggle />
    </nav>

    <!-- Mobile Menu Button & Toggle -->
    <div class="md:hidden flex items-center gap-2">
      <ThemeToggle />
      <button
        id="menu-toggle"
        class="flex items-center justify-center w-10 h-10 rounded-lg text-themed-text-secondary hover:text-accent transition-colors duration-300"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-5 h-5"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Navigation Drawer -->
  <div
    id="mobile-menu"
    class="md:hidden fixed inset-0 z-40 transform translate-x-full transition-transform duration-300 ease-in-out pt-20 pb-8 px-6 bg-background/95 backdrop-blur-lg flex flex-col"
  >
    <!-- Close button -->
    <button
      id="close-menu"
      class="absolute top-5 right-5 w-10 h-10 flex items-center justify-center rounded-full text-themed-text-secondary hover:text-accent transition-colors duration-300"
      aria-label="Close menu"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-5 h-5"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <nav class="flex flex-col gap-6 text-lg flex-grow">
      <a
        href="/roadmap"
        class="text-themed-text py-3 border-b border-themed-border flex items-center justify-between group font-mono transform transition-transform duration-300 hover:translate-x-1"
      >
        <span
          class="group-hover:text-accent transition-colors duration-300 font-medium"
          >Roadmap</span
        >
        <div
          class="w-6 h-6 rounded-full bg-accent/10 flex items-center justify-center text-accent opacity-75 group-hover:opacity-100 transition-opacity duration-300"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-4 h-4"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M8.25 4.5l7.5 7.5-7.5 7.5"></path>
          </svg>
        </div>
      </a>
      <a
        href="/projects"
        class="text-themed-text py-3 border-b border-themed-border flex items-center justify-between group font-mono transform transition-transform duration-300 hover:translate-x-1"
      >
        <span
          class="group-hover:text-accent transition-colors duration-300 font-medium"
          >Projects</span
        >
        <div
          class="w-6 h-6 rounded-full bg-accent/10 flex items-center justify-center text-accent opacity-75 group-hover:opacity-100 transition-opacity duration-300"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-4 h-4"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M8.25 4.5l7.5 7.5-7.5 7.5"></path>
          </svg>
        </div>
      </a>
      <a
        href="/literature"
        class="text-themed-text py-3 border-b border-themed-border flex items-center justify-between group font-mono transform transition-transform duration-300 hover:translate-x-1"
      >
        <span
          class="group-hover:text-accent transition-colors duration-300 font-medium"
          >Literature</span
        >
        <div
          class="w-6 h-6 rounded-full bg-accent/10 flex items-center justify-center text-accent opacity-75 group-hover:opacity-100 transition-opacity duration-300"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-4 h-4"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M8.25 4.5l7.5 7.5-7.5 7.5"></path>
          </svg>
        </div>
      </a>
      <a
        href="/contact"
        class="mt-auto w-full overflow-hidden relative group rounded-lg font-mono transform transition-transform duration-300 hover:scale-105 bg-gradient-to-r from-accent to-highlight"
      >
        <span
          class="relative py-3 flex justify-center items-center text-primary font-medium"
        >
          Contact
        </span>
      </a>
    </nav>

    <!-- Brand in mobile menu -->
    <div class="mt-12 text-center">
      <div
        class="text-themed-text-secondary font-sans font-semibold text-lg tracking-tight opacity-80"
      >
        <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-accent to-highlight inline-block"
        >
          Luis Miguel Montoya
        </span>
        <span class="block text-sm font-normal mt-1 font-mono text-highlight">
          Understand to Align
        </span>
      </div>
    </div>
  </div>

  <script>
    // Mobile menu toggle
    const menuToggle = document.getElementById("menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");
    const closeMenu = document.getElementById("close-menu");
    const header = document.getElementById("site-header");

    menuToggle?.addEventListener("click", () => {
      const expanded = menuToggle.getAttribute("aria-expanded") === "true";
      menuToggle.setAttribute("aria-expanded", (!expanded).toString());
      mobileMenu?.classList.toggle("translate-x-full");
      document.body.classList.toggle("overflow-hidden");
    });

    closeMenu?.addEventListener("click", () => {
      menuToggle?.setAttribute("aria-expanded", "false");
      mobileMenu?.classList.add("translate-x-full");
      document.body.classList.remove("overflow-hidden");
    });

    // Header opacity on load
    document.addEventListener("DOMContentLoaded", () => {
      if (header) {
        header.classList.add("opacity-0");
        setTimeout(() => {
          header.classList.remove("opacity-0");
          header.classList.add("opacity-100");
        }, 100);
      }
    });
  </script>
</header>

<style>
  #site-header {
    transition:
      opacity 0.5s ease,
      box-shadow 0.3s ease,
      background-color var(--transition-base);
  }
  #mobile-menu {
    transition:
      transform 0.3s ease-in-out,
      background-color var(--transition-base);
  }
</style>
