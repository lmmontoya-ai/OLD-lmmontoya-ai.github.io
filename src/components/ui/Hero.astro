---
// src/components/ui/Hero.astro
// Hero section with distinctive branding and vertical cards layout

interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = "Understand to Align",
  subtitle = "Exploring the journey from physics to AI interpretability research.",
} = Astro.props;
---

<section
  class="relative w-full min-h-screen flex items-center justify-center pt-16 pb-20"
>
  <!-- Background elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <!-- Subtle gradient overlays -->
    <div class="absolute inset-0 bg-surface opacity-90"></div>

    <!-- Abstract shapes representing AI/ML concepts -->
    <div
      class="absolute top-1/3 right-[15%] w-64 h-64 rounded-full bg-gradient-to-r from-accent/5 to-highlight/10 blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-1/3 left-[20%] w-72 h-72 rounded-full bg-gradient-to-r from-highlight/5 to-accent/10 blur-3xl"
    >
    </div>

    <!-- Technical pattern overlay -->
    <div class="absolute top-0 left-0 right-0 h-full opacity-[0.015]">
      <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern
            id="smallGrid"
            width="8"
            height="8"
            patternUnits="userSpaceOnUse"
          >
            <path
              d="M 8 0 L 0 0 0 8"
              fill="none"
              stroke="currentColor"
              stroke-width="0.5"
              opacity="0.2"></path>
          </pattern>
          <pattern
            id="grid"
            width="80"
            height="80"
            patternUnits="userSpaceOnUse"
          >
            <rect width="80" height="80" fill="url(#smallGrid)"></rect>
            <path
              d="M 80 0 L 0 0 0 80"
              fill="none"
              stroke="currentColor"
              stroke-width="1"
              opacity="0.2"></path>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid)" stroke-width="0"
        ></rect>
      </svg>
    </div>
  </div>

  <div
    class="container mx-auto px-6 sm:px-8 md:px-12 lg:px-16 xl:px-24 relative z-10 mt-8"
  >
    <div
      class="flex flex-col lg:flex-row items-center justify-center gap-12 lg:gap-20 xl:gap-24"
    >
      <!-- Main hero content -->
      <div class="max-w-2xl lg:max-w-xl">
        <!-- Tagline -->
        <div
          class="inline-flex items-center mb-6 px-3 py-1 rounded-full bg-accent/5 border border-accent/10 text-accent text-sm font-medium"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4 mr-2"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          <span class="font-mono tracking-tight"
            >Aspiring AI Interpretability Researcher</span
          >
        </div>

        <!-- Main heading with gradient -->
        <h1
          class="text-5xl md:text-6xl xl:text-7xl font-sans font-semibold mb-6 leading-[1.1]"
        >
          <span class="text-primary"
            >Luis Miguel <br class="hidden sm:block" /></span
          >
          <span class="gradient-text">Montoya</span>
        </h1>

        <!-- Motto/tagline -->
        <p class="text-xl md:text-2xl text-primary font-medium mb-4">
          {title}
        </p>

        <!-- Subtitle -->
        <p class="text-lg text-secondary mb-8 leading-relaxed font-body">
          {subtitle}
        </p>

        <!-- Call to action buttons -->
        <div class="flex flex-col sm:flex-row gap-4 mb-8">
          <a
            href="/roadmap"
            class="relative overflow-hidden group rounded-lg inline-flex"
          >
            <span
              class="absolute inset-0 w-full h-full bg-gradient-to-r from-accent to-highlight opacity-90 group-hover:opacity-100 transition-opacity duration-300"
            ></span>
            <span
              class="relative px-6 py-3 text-white font-medium inline-flex items-center transition-transform duration-300 group-hover:translate-y-[-1px] group-hover:shadow-md"
            >
              View Research Roadmap
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 ml-2 transform group-hover:translate-x-1 transition-transform duration-300"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </span>
          </a>

          <a
            href="/projects"
            class="px-6 py-3 rounded-lg border border-primary/20 text-primary hover:bg-primary/5 hover:border-accent/30 transition-all duration-300 inline-flex items-center font-medium"
          >
            Explore Projects
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 ml-2"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Vertical card stack for latest content (placeholder for actual content) -->
      <div class="w-full lg:w-auto lg:min-w-[400px] max-w-md">
        <div class="space-y-6">
          <!-- This will be filled with actual cards in the index page -->
          <slot />
        </div>
      </div>
    </div>
  </div>
</section>
