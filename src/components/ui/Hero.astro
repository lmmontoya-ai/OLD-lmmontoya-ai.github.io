---
// src/components/ui/Hero.astro
// Hero section with distinctive branding and vertical cards layout

interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = "Understand to Align",
  subtitle = "Exploring the journey from physics to AI interpretability research.",
} = Astro.props;
---

<section
  class="relative w-full min-h-screen flex items-center justify-center pt-16 pb-20"
>
  <!-- Background elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <!-- Subtle gradient overlays -->
    <div class="absolute inset-0 bg-surface opacity-90"></div>

    <!-- Abstract shapes representing AI/ML concepts -->
    <div
      class="absolute top-1/3 right-[15%] w-64 h-64 rounded-full bg-gradient-to-r from-accent/5 to-highlight/10 blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-1/3 left-[20%] w-72 h-72 rounded-full bg-gradient-to-r from-highlight/5 to-accent/10 blur-3xl"
    >
    </div>

    <!-- Technical pattern overlay -->
    <div class="absolute top-0 left-0 right-0 h-full opacity-[0.015]">
      <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern
            id="smallGrid"
            width="8"
            height="8"
            patternUnits="userSpaceOnUse"
          >
            <path
              d="M 8 0 L 0 0 0 8"
              fill="none"
              stroke="currentColor"
              stroke-width="0.5"
              opacity="0.2"></path>
          </pattern>
          <pattern
            id="grid"
            width="80"
            height="80"
            patternUnits="userSpaceOnUse"
          >
            <rect width="80" height="80" fill="url(#smallGrid)"></rect>
            <path
              d="M 80 0 L 0 0 0 80"
              fill="none"
              stroke="currentColor"
              stroke-width="1"
              opacity="0.2"></path>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid)" stroke-width="0"
        ></rect>
      </svg>
    </div>
  </div>

  <div
    class="container mx-auto px-6 sm:px-8 md:px-12 lg:px-16 xl:px-24 relative z-10 mt-8"
  >
    <div
      class="flex flex-col lg:flex-row items-center justify-center gap-12 lg:gap-20 xl:gap-24"
    >
      <!-- Main hero content -->
      <div class="max-w-2xl lg:max-w-xl">
        <!-- Tagline -->
        <div
          class="inline-flex items-center mb-6 px-3 py-1 rounded-full bg-accent/5 border border-accent/10 text-accent text-sm font-medium"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-4 w-4 mr-2"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          <span class="font-mono tracking-tight"
            >Aspiring AI Interpretability Researcher</span
          >
        </div>

        <!-- Main heading with gradient -->
        <h1
          class="text-5xl md:text-6xl xl:text-7xl font-sans font-semibold mb-6 leading-[1.1]"
        >
          <span class="text-themed-text"
            >Luis Miguel <br class="hidden sm:block" /></span
          >
          <span class="text-highlight">Montoya</span>
        </h1>

        <!-- Motto/tagline -->
        <p
          class="text-xl md:text-2xl text-themed-text font-normal tracking-[0.02em] mb-4"
        >
          {title}
        </p>

        <!-- Subtitle -->
        <p
          class="text-lg text-themed-text-secondary mb-8 leading-relaxed font-body"
        >
          {subtitle}
        </p>

        <!-- Call to action buttons -->
        <div class="flex flex-col sm:flex-row sm:justify-start gap-4 mb-8">
          <!-- Primary button: View Roadmap -->
          <a
            href="/roadmap"
            class="inline-flex items-center justify-center px-6 py-3 rounded-xl font-semibold font-sans tracking-tight relative overflow-hidden group transition-all duration-300 bg-highlight text-primary border border-transparent shadow-sm hover:-translate-y-0.5 hover:brightness-105 focus:outline-none focus-visible:ring-2 focus-visible:ring-highlight focus-visible:ring-offset-2"
            style="box-shadow: var(--shadow-sm); transition: all 300ms cubic-bezier(0.34, 1.56, 0.64, 1);"
          >
            <span class="relative z-10">View Roadmap</span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 ml-2 transform group-hover:translate-x-1 transition-transform duration-300 relative z-10"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
            <!-- Hover effects -->
            <div
              class="absolute inset-0 transition-all duration-300 group-hover:shadow-lg"
              style="box-shadow: var(--glow-highlight), var(--shadow-lg); opacity: 0; transition: opacity 300ms ease;"
              onmouseenter="this.style.opacity='1'"
              onmouseleave="this.style.opacity='0'"
            >
            </div>
          </a>

          <!-- Secondary button: Explore Projects -->
          <a
            href="/projects"
            class="inline-flex items-center justify-center px-6 py-3 rounded-xl font-semibold font-sans tracking-tight relative overflow-hidden group transition-all duration-300 bg-transparent text-themed-text border-2 border-themed-border backdrop-blur-sm hover:-translate-y-px hover:text-accent hover:border-accent hover:bg-accent/5 focus:outline-none focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2"
            style="border-color: rgba(var(--color-border), calc(var(--color-border-alpha) * 2)); transition: all 300ms cubic-bezier(0.34, 1.56, 0.64, 1);"
          >
            <span class="relative z-10">Explore Projects</span>
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5 ml-2 transform group-hover:translate-x-1 transition-transform duration-300 relative z-10"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
            <!-- Hover shadow effect -->
            <div
              class="absolute inset-0 transition-shadow duration-300 opacity-0 group-hover:opacity-100"
              style="box-shadow: var(--shadow-md);"
            >
            </div>
          </a>
        </div>
      </div>

      <!-- Vertical card stack for latest content (placeholder for actual content) -->
      <div
        class="w-full lg:w-auto lg:min-w-[400px] max-w-md h-full flex items-center"
      >
        <div class="space-y-6 flex-1 flex">
          <!-- This will be filled with actual cards in the index page -->
          <slot />
        </div>
      </div>
    </div>
  </div>
</section>
