---
// src/components/ui/ThemeToggle.astro
---

<button
  id="themeToggle"
  class="w-11 h-11 flex items-center justify-center rounded-full bg-card-bg/80 backdrop-blur-sm cursor-pointer transition-all duration-300 ml-4 relative overflow-hidden group hover:-translate-y-0.5 hover:scale-105 hover:shadow-md focus:outline-none focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2"
  title="Toggle dark/light mode"
  aria-label="Toggle dark/light mode"
>
  <!-- Hover gradient background -->
  <div
    class="absolute inset-0 rounded-full bg-gradient-to-br from-accent/10 to-highlight/10 opacity-0 transition-opacity duration-200 group-hover:opacity-100"
  >
  </div>

  <svg
    xmlns="http://www.w3.org/2000/svg"
    id="sun-icon"
    class="hidden w-5 h-5 text-themed-text transition-all duration-200 relative z-10"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    fill="none"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
    <circle cx="12" cy="12" r="4"></circle>
    <path
      d="M3 12h1m8 -9v1m8 8h1m-9 8v1m-6.4 -15.4l.7 .7m12.1 -.7l-.7 .7m0 11.4l.7 .7m-12.1 -.7l-.7 .7"
    ></path>
  </svg>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    id="moon-icon"
    class="hidden w-5 h-5 text-themed-text transition-all duration-200 relative z-10"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    fill="none"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
    <path
      d="M12 3c.132 0 .263 0 .393 0a7.5 7.5 0 0 0 7.92 12.446a9 9 0 1 1 -8.313 -12.454z"
    ></path>
  </svg>
</button>

<script>
  // Icon visibility based on current theme
  const updateIconVisibility = () => {
    const isDark = document.documentElement.classList.contains("dark");
    const sunIcon = document.getElementById("sun-icon");
    const moonIcon = document.getElementById("moon-icon");

    if (sunIcon && moonIcon) {
      sunIcon.classList.toggle("hidden", isDark);
      moonIcon.classList.toggle("hidden", !isDark);
    }
  };

  // Listen for theme changes (class changes on <html>)
  const observer = new MutationObserver(updateIconVisibility);
  observer.observe(document.documentElement, {
    attributes: true,
    attributeFilter: ["class"],
  });

  // Initialize icons on DOMContentLoaded
  document.addEventListener("DOMContentLoaded", updateIconVisibility);
  // Also update on Astro page transitions
  if (document.addEventListener) {
    document.addEventListener("astro:page-load", updateIconVisibility);
  }
  // Update icons right away for initial page load
  updateIconVisibility();
</script>
