---
// src/components/ui/UpdateCard.astro
// Reusable component for displaying latest update cards with consistent styling

import { formatRelativeDate } from "../../utils/dateUtils";

interface Props {
  title: string;
  date: string;
  tag: string;
  description?: string;
  href: string;
  icon: "roadmap" | "project" | "literature";
  colorClass: string;
  borderColorClass: string;
}

const {
  title,
  date,
  tag,
  description,
  href,
  icon,
  colorClass,
  borderColorClass,
} = Astro.props;

// Map of icon paths for different card types
const iconPaths = {
  roadmap:
    "M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01",
  project:
    "M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z",
  literature:
    "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253",
};
---

<a
  href={href}
  class={`group relative block p-4 hover:${colorClass} hover:shadow-md hover:scale-[1.01] transition-all duration-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-accent rounded-sm mt-[1px]`}
>
  <div
    class={`absolute left-0.5 top-0 bottom-0 w-1 group-hover:w-1.5 ${borderColorClass} transition-all duration-200`}
  >
  </div>
  <div class="flex items-center pl-3">
    <div
      class={`p-2 ${colorClass} rounded-lg mr-3 ${colorClass.replace("bg-", "text-").replace("/10", "")}`}
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d={iconPaths[icon]}></path>
      </svg>
    </div>
    <div>
      <div
        class={`text-xs font-medium ${colorClass.replace("bg-", "text-").replace("/10", "")} mb-1`}
      >
        {tag}
      </div>
      <h4 class="font-semibold text-white mb-1">{title}</h4>
      <div class="text-xs text-white/60 font-mono">
        {date}
        <span class="opacity-70">â€¢ {formatRelativeDate(date)}</span>
      </div>
    </div>
  </div>
</a>
