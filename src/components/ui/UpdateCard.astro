---
import { formatRelativeDate } from "../../utils/dateUtils";
import { iconPaths } from "../../utils/iconPaths";

// src/components/ui/UpdateCard.astro
// Reusable component for displaying latest update cards with consistent styling

interface Props {
  title: string;
  date: string;
  tag: string;
  description?: string;
  href: string;
  icon: "roadmap" | "project" | "literature";
  colorClass: string;
  borderColorClass: string;
}

const {
  title,
  date,
  tag,
  description,
  href,
  icon,
  colorClass,
  borderColorClass,
} = Astro.props;
---

<a
  href={href}
  class={`group relative block p-4 hover:${colorClass} hover:shadow-md hover:scale-[1.01] transition-all duration-200 focus-visible:outline focus-visible:outline-accent rounded-sm mt-[1px] flex-1`}
>
  <div
    class={`absolute left-0.5 top-0 bottom-0 w-1 group-hover:w-1.5 ${borderColorClass} transition-all duration-200`}
  >
  </div>
  <div class="flex items-center pl-3">
    <div
      class={`p-2 ${colorClass} rounded-lg mr-3 ${colorClass.replace("bg-", "text-").replace("/10", "")}`}
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d={iconPaths[icon]}></path>
      </svg>
    </div>
    <div>
      <div
        class={`text-xs font-medium ${colorClass.replace("bg-", "text-").replace("/10", "")} mb-1`}
      >
        {tag}
      </div>
      <h4 class="font-semibold text-white mb-1">{title}</h4>
      {description && <p class="text-white/80 text-xs mb-1">{description}</p>}
      <div class="text-xs text-white/60 font-mono">
        {date}
        <span class="opacity-70"> â€¢ {formatRelativeDate(date)}</span>
      </div>
    </div>
  </div>
</a>
