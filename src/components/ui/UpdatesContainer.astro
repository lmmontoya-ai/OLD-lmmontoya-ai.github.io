---
// src/components/ui/UpdatesContainer.astro
// Container component for latest updates section

interface Props {
  title?: string;
  seeAllHref?: string;
  seeAllText?: string;
}

const {
  title = "Latest Updates",
  seeAllHref = "/roadmap",
  seeAllText = "See All",
} = Astro.props;
---

<div
  class="w-full h-full rounded-2xl overflow-hidden bg-white/5 backdrop-blur-sm border border-white/10 shadow-md flex flex-col"
>
  <div
    class="p-4 bg-white/10 border-b border-white/10 flex justify-between items-center"
  >
    <h3 class="font-medium text-white text-lg">{title}</h3>
    <a
      href={seeAllHref}
      class="text-accent text-sm flex items-center px-3 py-1.5 rounded-full hover:bg-accent/10 transition-all duration-200 focus-visible:outline focus-visible:outline-2 focus-visible:outline-accent focus-visible:outline-offset-2 group"
    >
      {seeAllText}
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-4 w-4 ml-1 opacity-0 -translate-x-1 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300 ease-in-out"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path
          fill-rule="evenodd"
          d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
          clip-rule="evenodd"></path>
      </svg>
    </a>
  </div>
  <div class="flex-1 flex flex-col">
    <slot />
    <div class="flex-1"></div>
  </div>
</div>
