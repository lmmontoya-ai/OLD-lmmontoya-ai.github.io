---
// src/components/ui/UpdatesContainer.astro
// Container component for latest updates section

interface Props {
  title?: string;
  seeAllHref?: string;
  seeAllText?: string;
}

const {
  title = "Latest Updates",
  seeAllHref = "/roadmap",
  seeAllText = "See All",
} = Astro.props;
---

<div class="updates-container w-full h-full flex flex-col">
  <div class="updates-header flex justify-between items-center">
    <h3 class="font-semibold text-themed-text text-lg font-sans tracking-tight">
      {title}
    </h3>
    <a
      href={seeAllHref}
      class="text-themed-text hover:text-accent text-sm flex items-center transition-all duration-300 focus-visible:outline focus-visible:outline-2 focus-visible:outline-accent focus-visible:outline-offset-2 group font-mono font-medium relative"
    >
      {seeAllText}
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-4 w-4 ml-1.5 opacity-70 group-hover:opacity-100 group-hover:translate-x-0.5 transition-all duration-300 ease-out"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path
          fill-rule="evenodd"
          d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
          clip-rule="evenodd"></path>
      </svg>
      <span
        class="absolute -bottom-1 left-0 w-full h-0.5 bg-accent transform origin-left scale-x-0 transition-transform duration-300 ease-out group-hover:scale-x-100"
      ></span>
    </a>
  </div>
  <div class="flex-1 flex flex-col py-1">
    <slot />
    <div class="flex-1"></div>
  </div>
</div>
