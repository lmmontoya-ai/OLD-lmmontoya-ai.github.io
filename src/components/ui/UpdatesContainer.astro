---
// src/components/ui/UpdatesContainer.astro
// Container component for latest updates section
// Refactored to use themed utilities for background, shadow, and text.

interface Props {
  title?: string;
  seeAllHref?: string;
  seeAllText?: string;
}

const {
  title = "Latest Updates",
  seeAllHref = "/roadmap",
  seeAllText = "See All",
} = Astro.props;

// Container classes using themed utilities
const containerClasses = [
  "w-full",
  "h-full",
  "flex",
  "flex-col",
  "rounded-2xl",
  "overflow-hidden",
  "shadow-themed-md", // Use themed shadow
  "transition-all",
  "duration-spring", // Already uses a defined animation property
  "backdrop-blur-themed", // Use themed backdrop blur
  "container-background", // Use new themed background utility
].join(" ");

// Header classes using themed utilities
const headerClasses = [
  "flex",
  "justify-between",
  "items-center",
  "p-4",
  "px-5",
  "container-header-background", // Use new themed header background utility
].join(" ");
---

<div class={containerClasses}>
  <div class={headerClasses}>
    <h3 class="font-semibold text-primary text-lg font-sans tracking-tight">
      {title}
    </h3>
    <a
      href={seeAllHref}
      class="text-primary hover:text-interactive-blue text-sm flex items-center focus-visible:outline focus-visible:outline-2 focus-visible:outline-interactive-blue focus-visible:outline-offset-2 group font-mono font-medium relative transition-spring"
    >
      {seeAllText}
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-4 w-4 ml-1.5 opacity-70 group-hover:opacity-100 group-hover:translate-x-0.5 transition-spring"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path
          fill-rule="evenodd"
          d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
          clip-rule="evenodd"></path>
      </svg>
      <span
        class="absolute -bottom-1 left-0 w-full h-0.5 bg-interactive-blue transform origin-left scale-x-0 transition-underline-themed group-hover:scale-x-100"
      ></span>
    </a>
  </div>
  <div class="flex-1 flex flex-col py-1">
    <slot />
    <div class="flex-1"></div>
  </div>
</div>
