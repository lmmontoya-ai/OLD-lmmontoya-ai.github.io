---
import Layout from "../../layouts/Layout.astro";
import Button from "../../components/ui/Button.astro";

// Obfuscate email for spam protection
const email =
  ["luis", "miguel", "montoya"].join(".") + "@" + ["example", "com"].join(".");
---

<Layout
  title="Contact — Luis Miguel Montoya"
  description="As an aspiring AI researcher and Data Scientist, I'm eager to discuss collaborations, explore AI interpretability research, and apply data-driven insights to innovative projects."
>
  >
  <div class="min-h-screen pt-20 pb-16">
    <div class="container mx-auto px-6 lg:px-16 xl:px-24">
      <div class="max-w-4xl mx-auto">
        <!-- Header -->
        <header class="text-center mb-16 animate-fade-in-up">
          <h1
            class="text-4xl md:text-5xl lg:text-6xl font-bold text-primary mb-6 tracking-tight"
          >
            Let's Connect
          </h1>
          <p
            class="text-xl md:text-2xl text-secondary max-w-3xl mx-auto leading-relaxed"
          >
            I'm always interested in discussing AI interpretability, research
            collaborations, and opportunities to make AI systems safer and more
            understandable.
          </p>
        </header>
        <!-- Main Contact Section -->
        <div class="relative mb-16">
          <!-- Background decorative elements -->
          <div
            class="absolute inset-0 bg-gradient-to-br from-interactive-blue/5 via-transparent to-interactive-gold/5 rounded-3xl blur-3xl"
          >
          </div>
          <div
            class="absolute -inset-2 bg-gradient-to-r from-interactive-blue/10 via-transparent to-interactive-gold/10 rounded-3xl opacity-50"
          >
          </div>

          <div
            class="relative bg-gradient-to-br from-surface-secondary/80 to-surface-tertiary/60 backdrop-blur-lg rounded-3xl p-8 md:p-16 border border-primary/50 shadow-themed-lg text-center animate-fade-in-up"
            style="animation-delay: 0.1s"
          >
            <!-- Contact Icon -->
            <div
              class="inline-flex items-center justify-center w-20 h-20 rounded-2xl bg-gradient-to-br from-interactive-blue/20 to-interactive-gold/20 mb-8 mx-auto"
            >
              <svg
                class="w-10 h-10 text-interactive-blue"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
            </div>

            <h2
              class="text-3xl md:text-4xl font-bold text-primary mb-6 tracking-tight"
            >
              Let's Start a Conversation
            </h2>
            <p
              class="text-xl text-secondary mb-12 max-w-3xl mx-auto leading-relaxed"
            >
              Whether you're interested in AI interpretability research,
              potential collaborations, speaking opportunities, or just want to
              discuss the fascinating world of AI alignment— I'd love to hear
              from you.
            </p>

            <!-- Email with copy button -->
            <div
              class="inline-flex items-center gap-4 bg-surface-primary/50 rounded-xl px-6 py-4 mb-8 border border-subtle"
            >
              <span
                class="font-mono text-primary text-lg select-all"
                id="email"
              >
                {email}
              </span>
              <Button
                id="copy-email"
                variant="secondary"
                size="md"
                ariaLabel="Copy email address"
              >
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                  ></path>
                </svg>
              </Button>
            </div>

            <!-- Social Links -->
            <div class="flex justify-center gap-4 mb-8">
              <!-- GitHub -->
              <a
                href="https://github.com/luismiguelmontoya"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center w-12 h-12 rounded-xl bg-surface-secondary hover:bg-surface-tertiary text-secondary hover:text-primary transition-theme shadow-themed-sm hover:shadow-themed-md"
                aria-label="GitHub Profile"
                title="GitHub Profile"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                  ></path>
                </svg>
              </a>

              <!-- LinkedIn -->
              <a
                href="https://linkedin.com/in/luismiguelmontoya"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center w-12 h-12 rounded-xl bg-surface-secondary hover:bg-surface-tertiary text-secondary hover:text-primary transition-theme shadow-themed-sm hover:shadow-themed-md"
                aria-label="LinkedIn Profile"
                title="LinkedIn Profile"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                  ></path>
                </svg>
              </a>

              <!-- Twitter/X -->
              <a
                href="https://twitter.com/luismiguel_ai"
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center w-12 h-12 rounded-xl bg-surface-secondary hover:bg-surface-tertiary text-secondary hover:text-primary transition-theme shadow-themed-sm hover:shadow-themed-md"
                aria-label="Twitter Profile"
                title="Twitter Profile"
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
                  ></path>
                </svg>
              </a>
            </div>
            <!-- Explore My Work -->
            <div class="space-y-6">
              <h3 class="text-lg font-semibold text-primary mb-4">
                Explore My Work
              </h3>
              <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                <Button href="/roadmap" variant="secondary" size="md">
                  <svg
                    class="w-4 h-4 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"
                    ></path>
                  </svg>
                  Roadmap
                </Button>
                <Button
                  href="/projects"
                  variant="secondary"
                  size="md"
                  fullWidth
                >
                  <svg
                    class="w-4 h-4 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"
                    ></path>
                  </svg>
                  Projects
                </Button>
                <Button href="/blog" variant="secondary" size="md">
                  <svg
                    class="w-4 h-4 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"
                    ></path>
                  </svg>
                  Thoughts
                </Button>
              </div>
            </div>
          </div>

          <!-- Response Time Info -->
          <div
            class="mt-12 text-center animate-fade-in-up"
            style="animation-delay: 0.4s"
          >
            <p class="text-sm text-tertiary max-w-2xl mx-auto leading-relaxed">
              I typically respond within 2-3 business days. For urgent matters,
              please mention it in the subject line. Looking forward to
              meaningful conversations about AI safety, interpretability, and
              the future of artificial intelligence.
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Copy Functionality Script -->
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const copyButton = document.getElementById("copy-email");
        const emailElement = document.getElementById("email");

        if (copyButton && emailElement) {
          copyButton.addEventListener("click", async () => {
            const email = emailElement.textContent;

            if (email) {
              try {
                await navigator.clipboard.writeText(email);

                // Visual feedback - change icon temporarily
                const svg = copyButton.querySelector("svg");
                if (svg) {
                  const originalPath = svg.innerHTML;
                  // Checkmark icon
                  svg.innerHTML =
                    '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />';

                  // Reset after 2 seconds
                  setTimeout(() => {
                    svg.innerHTML = originalPath;
                  }, 2000);
                }

                // Add a subtle animation
                copyButton.style.transform = "scale(0.95)";
                setTimeout(() => {
                  copyButton.style.transform = "scale(1)";
                }, 150);
              } catch (err) {
                console.error("Failed to copy email:", err);
                // Fallback - select the text
                const range = document.createRange();
                range.selectNode(emailElement);
                window.getSelection()?.removeAllRanges();
                window.getSelection()?.addRange(range);
              }
            }
          });
        }
      });
    </script>
  </div>

  <style>
    /* Enhanced animations for contact page */
    @keyframes fade-in-up {
      from {
        opacity: 0;
        transform: translateY(2rem);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .animate-fade-in-up {
      animation: fade-in-up 0.8s ease-out forwards;
      opacity: 0;
    }

    /* Enhanced social link hover effects */
    .social-link {
      position: relative;
      overflow: hidden;
    }

    .social-link::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(
        45deg,
        transparent,
        oklch(var(--color-interactive-blue) / 0.1),
        transparent
      );
      transform: translateX(-100%);
      transition: transform 0.6s ease;
    }

    .social-link:hover::before {
      transform: translateX(100%);
    }

    /* Copy button hover enhancement */
    #copy-email {
      position: relative;
      overflow: hidden;
    }

    #copy-email::before {
      content: "";
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      background: oklch(var(--color-interactive-blue) / 0.1);
      border-radius: 50%;
      transform: translate(-50%, -50%);
      transition:
        width 0.3s ease,
        height 0.3s ease;
    }

    #copy-email:hover::before {
      width: 100%;
      height: 100%;
    }
  </style>
</Layout>
