---
// src/pages/test/gradients.astro
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Gradient System Demo">
  <main class="min-h-screen py-20 bg-surface-primary text-primary">
    <div class="container mx-auto px-6 max-w-4xl">
      <h1 class="text-4xl font-bold mb-8">Gradient System Demo</h1>

      <!-- Animated Brand Gradient -->
      <section class="mb-12">
        <h2 class="text-2xl font-semibold mb-4 text-secondary">
          Animated Brand Gradient
        </h2>
        <div class="w-full h-32 rounded-lg gradient-animated"></div>
        <p class="text-sm text-tertiary mt-2">
          8-second rotation using --gradient-brand-primary
        </p>
      </section>

      <!-- Slow Animated Surface Gradient -->
      <section class="mb-12">
        <h2 class="text-2xl font-semibold mb-4 text-secondary">
          Slow Animated Surface Gradient
        </h2>
        <div class="w-full h-32 rounded-lg gradient-animated-slow"></div>
        <p class="text-sm text-tertiary mt-2">
          20-second rotation using --gradient-surface-hero
        </p>
      </section>

      <!-- Mesh Gradient with Pulse -->
      <section class="mb-12">
        <h2 class="text-2xl font-semibold mb-4 text-secondary">
          Animated Mesh Gradient
        </h2>
        <div class="w-full h-48 rounded-lg gradient-mesh-animated"></div>
        <p class="text-sm text-tertiary mt-2">
          Pulsing mesh gradient with multiple radial gradients
        </p>
      </section>

      <!-- Gradient Text -->
      <section class="mb-12">
        <h2 class="text-2xl font-semibold mb-4 text-secondary">
          Animated Gradient Text
        </h2>
        <h3 class="text-6xl font-bold gradient-text">Gradient Text</h3>
        <p class="text-sm text-tertiary mt-2">
          Text with shifting gradient background
        </p>
      </section>

      <!-- Static Gradients -->
      <section class="mb-12">
        <h2 class="text-2xl font-semibold mb-4 text-secondary">
          Static Category Gradients
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div
            class="h-24 rounded-lg"
            style="background: var(--gradient-milestone)"
          >
            <div class="p-4 text-white font-semibold">Milestone</div>
          </div>
          <div
            class="h-24 rounded-lg"
            style="background: var(--gradient-project)"
          >
            <div class="p-4 text-white font-semibold">Project</div>
          </div>
          <div
            class="h-24 rounded-lg"
            style="background: var(--gradient-resource)"
          >
            <div class="p-4 text-white font-semibold">Resource</div>
          </div>
        </div>
      </section>

      <!-- Gradient Border -->
      <section class="mb-12">
        <h2 class="text-2xl font-semibold mb-4 text-secondary">
          Gradient Border
        </h2>
        <div class="gradient-border p-8 rounded-lg bg-surface-secondary">
          <p class="text-primary">Content with animated gradient border</p>
        </div>
      </section>

      <!-- Button Gradients -->
      <section class="mb-12">
        <h2 class="text-2xl font-semibold mb-4 text-secondary">
          Button Gradients
        </h2>
        <div class="flex gap-4 flex-wrap">
          <button
            class="px-6 py-3 rounded-lg text-white font-semibold transition-all hover:scale-105"
            style="background: var(--gradient-button-primary)"
          >
            Primary Button
          </button>
          <button
            class="px-6 py-3 rounded-lg text-white font-semibold transition-all hover:scale-105"
            style="background: var(--gradient-button-secondary)"
          >
            Secondary Button
          </button>
        </div>
      </section>

      <div class="text-center mt-16">
        <a href="/" class="text-interactive-blue hover:underline"
          >‚Üê Back to Home</a
        >
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Additional demo-specific styles if needed */
  .gradient-demo-card {
    transition: transform 0.3s ease;
  }

  .gradient-demo-card:hover {
    transform: translateY(-4px);
  }
</style>
